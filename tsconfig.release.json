{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["es5", "es6", "dom", "esnext"],
    "rootDir": ".",
    "outDir": "build",
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "esModuleInterop": true,
    // "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/server/__tests__/**/*",
    "scripts/**/*"
  ]
}
